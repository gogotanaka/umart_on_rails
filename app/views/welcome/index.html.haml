#main_container
  <h1> <span style="color: red;">U</span>mart <span style="color: blue;">O</span>n <span style="color: green;">R</span>ails</h1>
  %h3= "ただいまの注文は#{Date.today}扱いになります。"
  = form_for(Order.new) do |f|
    %table
      %tr.height50px
        %td 名前:　
        %td= f.select :user_id, options_from_collection_for_select(User.order(name: :asc), :id, :name, selected: @user_id),{}, class: "form-control input-sm width100px float-left"
      %tr.height50px
        %td
        %td
          %div= render partial: 'welcome/menu', locals: {index: 1}
          #menu_item_form
          #menu_item_button
            = render partial: 'welcome/add_menu_button', locals: {index: 1}
      %tr.height50px
        %td 汁物:　
        %td
          %div
            %span 
              = check_box_tag 'options[]', 1, false
              豚汁
              = check_box_tag 'options[]', 2, false
              みそ汁
    
    = button_tag "submit", class: "btn btn-default top20px"

    %h1.top30px.text-center=link_to sanitize('<i class="fa fa-cloud"></i>') + "リコメンドエンジン" + sanitize('<i class="fa fa-cloud"></i>'), recommend_orders_path
    %h4.top50px=link_to "注文管理", orders_path
    %h4.top50px=link_to "ユーザー管理", users_path
    %h4.top50px=link_to "メニュー管理", menus_path